@model ShelterClient.Models.Cat

<h1>New Cat</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
<br/>
  @Html.Label("Weight in Kilograms")
  @Html.EditorFor(model => model.WeightKilo)
<br/>
  @Html.Label("Is the cat Female")
  @Html.EditorFor(model => model.IsFemale)
<br/>
  @Html.LabelFor(model => model.Birthday)
  @Html.EditorFor(model => model.Birthday)
<br/>
  @Html.LabelFor(model => model.Coloring)
  @Html.TextBoxFor(model => model.Coloring)
<br/>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
<br/>
  <input type="submit" value="Save" />
}
<br/>
<p>@Html.ActionLink("View Cats", "Index")</p>